# @name Testing for various period sizes
# @desc Do record for various period sizes
# @requires alsa && hda
ALSA_S_FUNC_CAP_PRDSZ_1 source 'common.sh' ; do_cmd 'alsa_tests.sh -t capture -p 1 -F ALSA_M_FUNC_CAP_PRDSZ_1.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -p 1 -F ALSA_M_FUNC_CAP_PRDSZ_1.snd -d 20'
