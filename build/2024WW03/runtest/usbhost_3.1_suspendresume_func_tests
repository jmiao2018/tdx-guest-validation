USBHOST_XS_FUNC_SR_3.1_FLASH_DISK usb_suspend_resume_tests.sh -p 3.1 -t flash -s disk
USBHOST_XS_FUNC_SR_3.1_UAS_FREE usb_suspend_resume_tests.sh -p 3.1 -t uas -s freeze
USBHOST_XS_FUNC_SR_3.1_UAS_MEM usb_suspend_resume_tests.sh -p 3.1 -t uas -s mem
USBHOST_XS_FUNC_SR_3.1_UAS_DISK usb_suspend_resume_tests.sh -p 3.1 -t uas -s disk
