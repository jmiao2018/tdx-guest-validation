# @name NVME Write/Read Performance test with ext2
# @desc format nvme device first and then mount it and do read write perf test
# @requires nvme && ext2
# @setup_requires

NVME_S_PERF_EXT2_10M blk_device_filesystem_perf_test.sh -f "ext2" -s 100 -B "262144" -d "nvme"

NVME_M_PERF_EXT2_100M blk_device_filesystem_perf_test.sh -f "ext2" -s 100 -B "102400 262144 524288 1048576 5242880" -d "nvme"

NVME_L_PERF_EXT2_1G blk_device_filesystem_perf_test.sh -f "ext2" -s 1000 -B "102400 262144 524288 1048576 5242880" -d "nvme"
