# @name Testing for various sampling rates
# @desc Do capture and loopback for various sample rates
#       The playback tests in alsa_tests.sh will try to
#       fetch (if -u option is not specified) a file from server
#       http://gtopentest-server.gt.design.ti.com based on the
#       sample format, rate and number of channels; if the fetch
#       fails playback will use /dev/urandom as the source. It
#       is recommended to change the url to an existing server
#       in the test environment or to add the -u option in the
#       playback scenarios so that a valid audio source file is
#       used during playback tests.
# @requires alsa && hda
ALSA_S_FUNC_PLBK_SMPRT_8000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 8000 -F ALSA_M_FUNC_PLBK_SMPRT_8000.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_11025 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 11025 -F ALSA_M_FUNC_PLBK_SMPRT_11025.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_16000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 16000 -F ALSA_M_FUNC_PLBK_SMPRT_16000.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_22050 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 22050 -F ALSA_M_FUNC_PLBK_SMPRT_22050.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_24000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 24000 -F ALSA_M_FUNC_PLBK_SMPRT_24000.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_32000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 32000 -F ALSA_M_FUNC_PLBK_SMPRT_32000.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_44100 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 44100 -F ALSA_M_FUNC_PLBK_SMPRT_44100.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_48000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 48000 -F ALSA_M_FUNC_PLBK_SMPRT_48000.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_88200 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 88200 -F ALSA_M_FUNC_PLBK_SMPRT_88200.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_96000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 96000 -F ALSA_M_FUNC_PLBK_SMPRT_96000.raw -d 20'
ALSA_S_FUNC_PLBK_SMPRT_192000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -r 192000 -F ALSA_M_FUNC_PLBK_SMPRT_192000 -d 60'
