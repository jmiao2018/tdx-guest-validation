USBHOST_XS_FUNC_SR_3.0_FLASH_DISK usb_suspend_resume_tests.sh -p 3.0 -t flash -s disk
USBHOST_XS_FUNC_SR_3.0_UAS_FREE usb_suspend_resume_tests.sh -p 3.0 -t uas -s freeze
USBHOST_XS_FUNC_SR_3.0_UAS_MEM usb_suspend_resume_tests.sh -p 3.0 -t uas -s mem
USBHOST_XS_FUNC_SR_3.0_UAS_DISK usb_suspend_resume_tests.sh -p 3.0 -t uas -s disk
