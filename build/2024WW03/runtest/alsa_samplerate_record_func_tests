# @name Testing for various sampling rates
# @desc Do capture and loopback for various sample rates
#       The playback tests in alsa_tests.sh will try to
#       fetch (if -u option is not specified) a file from server
#       http://gtopentest-server.gt.design.ti.com based on the
#       sample format, rate and number of channels; if the fetch
#       fails playback will use /dev/urandom as the source. It
#       is recommended to change the url to an existing server
#       in the test environment or to add the -u option in the
#       playback scenarios so that a valid audio source file is
#       used during playback tests.
# @requires alsa && hda
ALSA_S_FUNC_CAP_SMPRT_8000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 8000 -F ALSA_M_FUNC_CAP_SMPRT_8000.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 8000 -F ALSA_M_FUNC_CAP_SMPRT_8000.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_11025 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 11025 -F ALSA_M_FUNC_CAP_SMPRT_11025.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 11025 -F ALSA_M_FUNC_CAP_SMPRT_11025.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_16000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 16000 -F ALSA_M_FUNC_CAP_SMPRT_16000.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 16000 -F ALSA_M_FUNC_CAP_SMPRT_16000.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_22050 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 22050 -F ALSA_M_FUNC_CAP_SMPRT_22050.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 22050 -F ALSA_M_FUNC_CAP_SMPRT_22050.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_24000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 24000 -F ALSA_M_FUNC_CAP_SMPRT_24000.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 24000 -F ALSA_M_FUNC_CAP_SMPRT_24000.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_32000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 32000 -F ALSA_M_FUNC_CAP_SMPRT_32000.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 32000 -F ALSA_M_FUNC_CAP_SMPRT_32000.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_44100	source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 44100 -F ALSA_S_FUNC_CAP_SMPRT_44100.snd'; do_cmd 'alsa_tests.sh -t playback -r 44100 -F ALSA_S_FUNC_CAP_SMPRT_44100.snd'
ALSA_S_FUNC_CAP_SMPRT_48000	source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 48000 -F ALSA_S_FUNC_CAP_SMPRT_48000.snd'; do_cmd 'alsa_tests.sh -t playback -r 48000 -F ALSA_S_FUNC_CAP_SMPRT_48000.snd'
ALSA_S_FUNC_CAP_SMPRT_88200 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 88200 -F ALSA_M_FUNC_CAP_SMPRT_88200.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 88200 -F ALSA_M_FUNC_CAP_SMPRT_88200.snd -d 20'
ALSA_S_FUNC_CAP_SMPRT_96000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 96000 -F ALSA_M_FUNC_CAP_SMPRT_96000.snd -d 20'; do_cmd 'alsa_tests.sh -t playback -r 96000 -F ALSA_M_FUNC_CAP_SMPRT_96000.snd -d 20'
ALSA_XS_FUNC_CAP_SMPRT_192000 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -r 192000 -F ALSA_M_FUNC_CAP_SMPRT_192000.snd -d 30'; do_cmd 'alsa_tests.sh -t playback -r 192000 -F ALSA_M_FUNC_CAP_SMPRT_192000.snd -d 30'
