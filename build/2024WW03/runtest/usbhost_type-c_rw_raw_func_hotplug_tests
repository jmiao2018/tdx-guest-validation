# @name usbhost basic func tests
# @desc usbhost read/write tests
# @requires usbhost && usbtypec
# @setup_requires
# @utility_requires avrdude

# USBTYPEC READ & WRITE TESTS FOR USB Type-C
USBTYPEC_XS_FUNC_RW_3.1_UAS_HOTPLUG usb_read_write_tests.sh -b 1MB -c 10 -p 3.1 -t uas -e hotplug -d 2
USBTYPEC_XS_FUNC_RW_3.1_UAS_HOTPLUG_HUB usb_read_write_tests.sh -b 1MB -c 10 -p 3.1 -t uas -e hotplug -d 2 -h 1
USBTYPEC_XS_FUNC_RW_3.0_FLASH_HOTPLUG usb_read_write_tests.sh -b 1MB -c 10 -p 3.0 -t flash -e hotplug -d 2
USBTYPEC_XS_FUNC_RW_3.0_UAS_HOTPLUG usb_read_write_tests.sh -b 1MB -c 10 -p 3.0 -t uas -e hotplug -d 3
USBTYPEC_XS_FUNC_RW_3.0_FLASH_HOTPLUG_HUB usb_read_write_tests.sh -b 1MB -c 10 -p 3.0 -t flash -e hotplug -d 1 -h 1
USBTYPEC_XS_FUNC_RW_3.0_UAS_HOTPLUG_HUB usb_read_write_tests.sh -b 1MB -c 10 -p 3.0 -t uas -e hotplug -d 1 -h 1
USBTYPEC_XS_FUNC_RW_2.0_FLASH_HOTPLUG usb_read_write_tests.sh -b 1MB -c 10 -p 2.0 -t flash -e hotplug -d 1
USBTYPEC_XS_FUNC_RW_2.0_FLASH_HOTPLUG_HUB usb_read_write_tests.sh -b 1MB -c 10 -p 2.0 -t flash -e hotplug -d 1 -h 1
