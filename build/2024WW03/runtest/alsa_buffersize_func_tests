# @name ALSA memory access type test
# @desc Loopback and Capture the audio with various buffersizes.
#       In loopback arecord will do capture with various buffer
#       sizes. The playback tests in alsa_tests.sh will try to
#       fetch (if -u option is not specified) a file from server
#       http://gtopentest-server.gt.design.ti.com based on the
#       sample format, rate and number of channels; if the fetch
#       fails playback will use /dev/urandom as the source. It
#       is recommended to change the url to an existing server
#       in the test environment or to add the -u option in the
#       playback scenarios so that a valid audio source file is
#       used during playback tests.
# @requires alsa && hda
ALSA_XS_FUNC_CAP_BUFSZ_64 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -b 64 -F ALSA_M_FUNC_CAP_BUFSZ_64.snd'; do_cmd 'alsa_tests.sh -t playback -b 64 -F ALSA_M_FUNC_CAP_BUFSZ_64.snd'
ALSA_S_FUNC_PLBK_BUFSZ_64 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -b 64 -F ALSA_M_FUNC_PLBK_BUFSZ_64.raw'
ALSA_XS_FUNC_LPBK_BUFSZ_64 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -b 64'
ALSA_XS_FUNC_CAP_BUFSZ_512 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -b 512 -F LSA_M_FUNC_CAP_BUFSZ_512.snd';do_cmd 'alsa_tests.sh -t playback -b 512 -F LSA_M_FUNC_CAP_BUFSZ_512.snd'
ALSA_S_FUNC_PLBK_BUFSZ_512 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -b 512 -F ALSA_M_FUNC_PLBK_BUFSZ_512.raw'
ALSA_XS_FUNC_LPBK_BUFSZ_512 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -b 512'
ALSA_XS_FUNC_CAP_BUFSZ_32768 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -b 32768 -F ALSA_M_FUNC_CAP_BUFSZ_32768'; do_cmd 'alsa_tests.sh -t playback -b 32768 -F ALSA_M_FUNC_CAP_BUFSZ_32768'
ALSA_S_FUNC_PLBK_BUFSZ_32768 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -b 512 -F ALSA_M_FUNC_PLBK_BUFSZ_32768.raw'
ALSA_XS_FUNC_LPBK_BUFSZ_32768 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -b 32768'
ALSA_XS_FUNC_CAP_BUFSZ_65536 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -b 65536 -F ALSA_M_FUNC_CAP_BUFSZ_65536.snd';do_cmd 'alsa_tests.sh -t playback -b 65536 -F ALSA_M_FUNC_CAP_BUFSZ_65536.snd'
ALSA_S_FUNC_PLBK_BUFSZ_65536 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -b 65536 -F ALSA_M_FUNC_PLBK_BUFSZ_65536.raw'
ALSA_XS_FUNC_LPBK_BUFSZ_65536 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -b 65536'
