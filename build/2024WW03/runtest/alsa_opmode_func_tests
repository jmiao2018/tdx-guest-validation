# @name ALSA operation mode
# @desc Testing Blocking and non-blocking mode of operation.
#       The playback tests in alsa_tests.sh will try to
#       fetch (if -u option is not specified) a file from server
#       http://gtopentest-server.gt.design.ti.com based on the
#       sample format, rate and number of channels; if the fetch
#       fails playback will use /dev/urandom as the source. It
#       is recommended to change the url to an existing server
#       in the test environment or to add the -u option in the
#       playback scenarios so that a valid audio source file is
#       used during playback tests.
# @requires alsa && hda
ALSA_XS_FUNC_CAP_OPM_BLK source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -o 0 -F ALSA_M_FUNC_CAP_OPM_BLK.snd'; do_cmd 'alsa_tests.sh -t playback -o 0 -F ALSA_M_FUNC_CAP_OPM_BLK.snd'
ALSA_S_FUNC_PLBK_OPM_BLK source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -o 0 -F ALSA_M_FUNC_PLBK_OPM_BLK.raw'
ALSA_XS_FUNC_LPBK_OPM_BLK_D10 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -o 0 -d 10'
ALSA_S_FUNC_LPBK_OPM_BLK_D60 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -o 0 -d 60'
ALSA_S_FUNC_LPBK_OPM_BLK_D120 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -o 0 -d 120'
ALSA_XS_FUNC_CAP_OPM_NBLK source 'common.sh' ;  do_cmd 'alsa_tests.sh -t capture -o 1 -F ALSA_M_FUNC_CAP_OPM_NBLK.snd'; do_cmd 'alsa_tests.sh -t playback -o 1 -F ALSA_M_FUNC_CAP_OPM_NBLK.snd'
ALSA_S_FUNC_PLBK_OPM_NBLK source 'common.sh' ;  do_cmd 'alsa_tests.sh -t playback -o 1 -F ALSA_M_FUNC_PLBK_OPM_NBLK.raw'
ALSA_XS_FUNC_LPBK_OPM_NBLK_D10 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -o 1 -d 10'
ALSA_S_FUNC_LPBK_OPM_NBLK_D60 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -o 1 -d 60'
ALSA_S_FUNC_LPBK_OPM_NBLK_D120 source 'common.sh' ;  do_cmd 'alsa_tests.sh -t loopback -o 1 -d 120'
